<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.essim">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".activities.PixivApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.FollowShowActivity" />
        <activity android:name=".activities.ImageDetailActivity" />
        <activity android:name=".activities.NewUserActivity" />
        <activity android:name=".activities.SearchResultActivity" />
        <activity android:name=".activities.ViewPagerActivity" />
        <activity android:name=".activities.UserDetailActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.CommentActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.SpecialCollectionActivity"></activity>
    </application>

</manifest>